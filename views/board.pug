extends layout

block content
  h1= title
  p Rows = #{query.rows} and Columns = #{query.cols}

  - rows = Number(query.rows)
  - cols = Number(query.cols)

  if !Number.isInteger(rows) || !Number.isInteger(cols):
    p Either Rows or Columns Aren't Integers

  else if rows > 10 || rows < 1:
    p Number is Out of Range

  else if cols > 10 || cols < 1:
    p Number is Out of Range

  else: 
    table#outer
      - for(let i=0; i<10; i++) {
          tr#middle
            - for(let j=0; j<10s; j++) {
                if j == i{
                  td= 1
                }
                else if j < i{
                  td= 0
                }
                else if j > i{
                  td= j + 1
                }

            - }
      - }